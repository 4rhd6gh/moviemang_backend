pipeline {
    agent any

    environment{
        GIT_COMMIT_HASH = sh (script: "git log -n 1 --pretty=format:'%H'", returnStdout: true)
        GIT_COMMIT_TAG = "echo $GIT_COMMIT_HASH | cut -c -8"
    }
    
    

    
    stages {
        stage('Build') {
        steps {
            sh "echo Git commit hash: ${GIT_COMMIT_HASH.substring(0,8)}"
            sh "echo Git commit tag: ${GIT_COMMIT_TAG}"
            sh 'echo "Hello World"'
        }
        }
    }
}